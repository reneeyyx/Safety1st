# Safety1st Backend Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
DEBUG=True
SECRET_KEY=your-secret-key-change-this-in-production

# CORS Origins (comma-separated list of allowed frontend URLs)
# Add your React/Unity frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Gemini AI Configuration (for future AI-enhanced analysis)
GEMINI_API_KEY=test-key-change-this
GEMINI_MODEL=gemini-pro

# Calculation Limits (optional - defaults are sensible)
MAX_IMPACT_SPEED_KMH=200
MIN_OCCUPANT_MASS_KG=40
MAX_OCCUPANT_MASS_KG=150

# Logging
LOG_LEVEL=INFO
